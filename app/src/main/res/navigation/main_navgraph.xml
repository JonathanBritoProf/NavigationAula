<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navgraph"
    app:startDestination="@id/fragmentMain2">
    <fragment
        android:id="@+id/fragmentMain2"
        android:name="br.digitalhouse.navigationaula.ui.fragments.FragmentMain"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" >
        <action
            android:id="@+id/action_fragmentMain2_to_fragmentoVerde"
            app:destination="@id/fragmentoVerde" />
        <action
            android:id="@+id/action_fragmentMain2_to_fragmentoVermelho"
            app:destination="@id/fragmentoVermelho" />
    </fragment>
    <fragment
        android:id="@+id/fragmentoVerde"
        android:name="br.digitalhouse.navigationaula.ui.fragments.FragmentoVerde"
        android:label="fragment_fragmento_verde"
        tools:layout="@layout/fragment_fragmento_verde" />
    <fragment
        android:id="@+id/fragmentoVermelho"
        android:name="br.digitalhouse.navigationaula.ui.fragments.FragmentoVermelho"
        android:label="fragment_fragmento_vermelho"
        tools:layout="@layout/fragment_fragmento_vermelho" />
</navigation>